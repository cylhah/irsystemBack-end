<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cylwyc.demo.dao.UpAndDownDao">
    <insert id="insertUpArticle">
        INSERT INTO
        upAndDown(userId,articleId,upOrDown)
        VALUES
        (#{userId},#{articleId},true)
    </insert>
    <insert id="insertDownArticle">
        INSERT INTO
        upAndDown(userId,articleId,upOrDown)
        VALUES
        (#{userId},#{articleId},false)
    </insert>
    <delete id="deleteUpAndDownDao">
        DELETE FROM
        upAndDown
        WHERE
        userId=#{userId}
        AND articleId=#{articleId}
    </delete>
</mapper>
